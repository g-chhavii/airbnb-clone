<% layout('layouts/boilerplate') %>

    <link rel="stylesheet" href="/stylesheets/new.css">

<body>
    <div class="container">
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
        
            <div class="row">
                <div class="col">
                    <label for="title" class="form-label">Enter Title</label>
        
                    <input class="form-control" value="<%= listing.title %>" id="title" name="listing[title]" type="text"
                        required />
        
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please provide a valid title.</div>
                </div>
            </div>
        
            <br>
        
            <div class="row">
                <div class="col">
                    <label for="image" class="form-label">Enter Image URL/Link</label>
        
                    <input class="form-control" value="<%= listing.image %>" required id="image" name="listing[image]"
                        type="text" />
        
                    <div class="invalid-feedback">Please provide a valid url.</div>
                    <div class="valid-feedback">nice!</div>
        
                </div>
        
                <div class="col">
                    <label for="price" class="form-label">Enter Price</label>
        
                    <input value="<%= listing.price %>" class="form-control" required id="price" name="listing[price]"
                        type="number" />
                    <div class="invalid-feedback">Please provide price.</div>
                </div>
            </div>
        
            <br>
        
            <div class="row">
                <div class="col">
                    <label for="country" class="form-label">Enter Country</label>
        
                    <input required class="form-control" id="country" name="listing[country]" type="text"
                        value="<%= listing.country %>" />
        
                    <div class="invalid-feedback">Please provide a valid country.</div>
                </div>
        
                <div class="col">
                    <label for="location" class="form-label">Enter Location</label>
                    <input required class="form-control" id="location" name="listing[location]" value="<%= listing.location %>"
                        type="text" />
                    <div class="invalid-feedback">Please provide a valid location.</div>
                </div>
            </div>
        
            <br>
        
            <div class="row">
                <div class="col">
                    <label for="description" class="form-label">Enter Description</label>
        
                    <textarea class="form-control" id="description" name="listing[description]" rows="5" required>
                            <%= listing.description %>
                            </textarea>
        
                    <div class="valid-feedback">Sounds Interesting!</div>
                    <div class="invalid-feedback">Please provide a valid description</div>
                </div>
            </div>
        
            <br>
        
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
        
        </form>
    </div>
</body>

<script src="../public/javascripts/script.js"></script>
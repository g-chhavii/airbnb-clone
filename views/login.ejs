<% layout('layouts/boilerplate') %>

  <link rel="stylesheet" href="/stylesheets/new.css">

<body>
  <div class="container-new container">
    <form method="POST" action="/login" class="needs-validation" novalidate>
      <h2>Login</h2>
      <br>
    
      <div class="row">

        <div>
          <label for="username" class="form-label">Enter Username</label>
          <br>
          <input class="form-control" id="username" name="username" placeholder="Enter username here" type="text" required />
        </div>

        <div>
          <br>
          <label for="password" class="form-label">Enter password</label>
          <br>
          <input class="form-control" required id="password" name="password" placeholder="Enter password here"
            type="password" />
        </div>

      </div>
    
      <br>
    
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    
      <br>
    
      <h6><a href="/signup">Sign up Here</a></h6>
    </form>
  </div>
</body>

<script src="../public/javascripts/script.js"></script>
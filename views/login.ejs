<% layout('layouts/boilerplate') %>

  <link rel="stylesheet" href="/stylesheets/new.css">

<body>
  <div class="container-new container">
    <form method="POST" action="/login" class="needs-validation" novalidate>
      <h4>Login</h4>
      <br>
    
      <div class="row">
        <div class="col">
          <label for="username" class="form-label">Enter Username</label>
    
          <input class="form-control" id="username" name="username" placeholder="Enter username" type="text" required />
    
    
        </div>
        <div class="col">
          <label for="password" class="form-label">Enter password</label>
    
          <input class="form-control" required id="password" name="password" placeholder="enter password here"
            type="password" />
        </div>
      </div>
    
      <br>
    
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    
      <br>
    
      <h6><a href="/signup">Sign up Here</a></h6>
    </form>
  </div>
</body>

<script src="../public/javascripts/script.js"></script>